              <add string="/*" />
              <add string="alter" />
              <add string="begin" />
              <add string="create" />
              <add string="cursor" />
              <add string="delete" />
              <add string="drop" />
              <add string="fetch" />
              <add string="insert" />
              <add string="kill" />
              <add string="open" />
              <add string="select" />
              <add string="sys" />
              <add string="table" />
              <add string="union" />
              <add string="update" />
              <add string="top" />
              <add string="iif" />
